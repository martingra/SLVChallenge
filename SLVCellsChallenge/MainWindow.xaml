<Window x:Class="SLVCellsChallenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLVCellsChallenge"
        mc:Ignorable="d"
        Title="SLV Cells Challenge" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Name="LoadImageButton" Content="Load Image" Width="100" Margin="5" Click="LoadImage_Click"/>
            <Button Name="ProcessImageButton" Content="Process Image" Width="100" Margin="5" Click="ProcessImage_Click"/>
            <Label Name="ResultLabel" Content="Results: " Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0">
                <Image Name="OriginalImage" Stretch="Uniform"/>
            </Border>
            
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2">
                <Image Name="ProcessedImage" Stretch="Uniform"/>
            </Border>
            
        </Grid>
    </Grid>
</Window>
